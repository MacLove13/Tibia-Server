{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@models/*": ["src/models/*"],
      "@socket/*": ["src/internal/*"],
      "@events": ["src/internal/events.ts"],
      "@database/*": ["src/database/*"],
      "@game/*": ["src/game/*"],
      "@utils/*": ["src/utils/*"],
      "@server/*": ["src/server/*"],
    },
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "noImplicitThis": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
